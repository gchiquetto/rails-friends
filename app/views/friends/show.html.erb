<div class="card" style="width: 40rem;">
  <div class="card-body">
    <h5 class="card-title"><%= @friend.first_name + " " + @friend.last_name %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= @friend.email %></h6>
    <p class="card-text">Phone: <%= @friend.phone %> </p>
    <p class="card-text">Twitter: <%= @friend.twitter %> </p>
    <%= link_to "Edit this friend", edit_friend_path(@friend), class: "btn btn-secondary" %> 
    <%= link_to "Back to friends", friends_path, class: "btn btn-secondary" %>
    <%= button_to "Destroy this friend", @friend,  data:{
          turbo_method: :delete,
          turbo_confirm: "Are you sure?"}, class: "btn btn-dark mt-1" %>
  </div>
</div>
