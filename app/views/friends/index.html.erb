<% if user_signed_in? %>
  <h1>Friend</h1>
  <div id="friends">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Twitter</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody class="table-group-divider">
          <% @friends.each do |friend| %>
            <% if friend.user == current_user %>
              <tr>
                <td><%= friend.first_name %></td>
                <td><%= friend.last_name %></td>
                <td><%= friend.email %></td>
                <td><%= friend.phone %></td>
                <td><%= friend.twitter %></td>
                <td><%= link_to "Show this friend", friend, class: "btn btn-primary" %></td>
                  <td><%= link_to "Edit this friend", edit_friend_path(friend), class: "btn btn-secondary" %></td>
                  <td><%= link_to "Destroy", friend, data:{
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"}, class: "btn btn-danger"  %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>      
  </div>

  <%= link_to "New friend", new_friend_path, class: "btn btn-secondary" %>

<% else %>
  <h1>Welcome to Friends App</h1>
<% end %>
